<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @fachschaft.name %>
</p>

<p>
  <b>Mail:</b>
  <%=mail_to @fachschaft.mail %>
</p>

<p>
  <b>Url:</b>
  <%=link_to @fachschaft.url %>
</p>

<p>
  <b>Address:</b>
  <%=link_to @fachschaft.address, "http://www.osm.org?query=#{u @fachschaft.address}%20Heidelberg" %>
</p>

<p><b>Mitglieder:</b><br/>
  <%= @fachschaft.users.map { |u| u.name }.join(", ") %>
</p>

<p><b>Laufende Abstimmungen:</b></p>
<table>
  <tr><th>Antrag</th><th>Ergebnis</th><th>Abstimmen</th></tr>
<% @fachschaft.get_votable_motions.each do |mv| %>
  <tr>
    <td><%=link_to mv[:motion].title, mv[:motion] %></td>
    <td><%=mv[:vote] ? mv[:vote].result_printable : "(keine Antwort)" %></td>
    <td>
      <% ident = "vote_#{@fachschaft.id}_#{mv[:motion].id}" %>
      <%= form_tag("/vote/#{@fachschaft.id}/#{mv[:motion].id}", :method => "get", :id => ident) do %>
        <%=
          opt = [["(keine Antwort)", ""], ["dafÃ¼r", "+"], ["dagegen", "-"], ["enthalten", "o"]]
          select_tag(:result, options_for_select(opt), {:onchange =>"$('##{ident}').submit();"})
        %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>


